
<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

  <h1>User info</h1>

  <% if @user.errors.any? %>
  <h3>
    <%= @user.errors.count %> errors prohibited this obj from being saved:
  </h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


  <%= form_with model: @user do |f| %>

  <div class="form-group">
  <label for="user_name">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class: "form-control name" %>
  </div>

  <div class="form-group">
  <lebel for="user_image">Image</lebel>
  <%= f.file_field :profile_image, placeholder:"Image", accept: "image/*",class: "form-control-file user" %>
  </div>

  <div class="form-group">
  <ladel for="user_introduction">Introduction</ladel>
  <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction", class: "form-control introduction" %>
  </div>

  <div class="form-group">
  <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
  <% end %>




