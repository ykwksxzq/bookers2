
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">

<%= render 'users/info', user: current_user %>
<%= render 'books/newbook', book: @book %>

</div>

<div class="col-md-8 offset-md-1">
 <h2>Users</h2>

 <table class="table">
 <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th collapse="3"></th>
    </tr>
  </thead>
  <tbody>
 <% @users.each do |user| %>
 <tr>
 <td>
  <%= image_tag user.get_profile_image(100,100) %>
 </td>
 <td><%= user.name %></td>
 <td><%= link_to "Show", user_path(current_user.id) %></td>
 <% end %>
 </tbody>
 </table>
</div>
</div>
</div>