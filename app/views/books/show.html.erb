<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

    <%= render 'users/info', user: @user %>
    <%= render 'books/newbook', book: @book %>

  </div>

 <div class="col-md-8 offset-md-1">

  <h2>Book detail</h2>

  <table class="table">
    <tbody>
     <tr>
     <% @books.each do |book| %>
     <td>
      <%= image_tag book.user.get_profile_image(100,100) %><br>
      <%= link_to book.user.name, user_path(@user.id) %>
      </td>
      <td><%=link_to book.title, book_path %></td>
      <td><%= book.body %></td>

      <% if book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", book_path(book.id), class:"btn btn-sm btn-danger", method: :delete,data: {confirm: "本当に削除しますか？"} %></td>
      <% end %>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
