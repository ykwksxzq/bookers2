<p id="notice"><%= notice %></p>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">

    <%= render 'users/info', user: current_user %>
    <%= render 'books/newbook', book: @book %>

  </div>

 <div class="col-md-8 offset-md-1">

  <h2>Book detail</h2>

  <table class="table">
    <tbody>
     <tr>
     <% @books.each do |book| %>
     <tr>
      <td>
      <%= image_tag book.user.get_profile_image(100,100) %><br>
      <%= link_to book.user.name, user_path(@user.id) %>
      </td>
      <td><%=link_to book.title, book_path %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit", edit_book_path(book.id), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-danger" %></td>
     </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
