

<%= render 'users/info', user: current_user %>
<%= render 'books/newbook', book: @book %>


<p>Book details</p>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
      <%= image_tag book.user.get_profile_image(100,100) %><br>
      <%= link_to book.user.name, user_path %></td>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Edit", edit_book_path(book.id) %></td>
     <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
    </tr>
    <% end %>
   </tbody>
 </table>