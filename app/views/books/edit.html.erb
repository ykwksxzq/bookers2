<h1>Editing Book</h1>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
 <label for="inputTitle">Title</label>
 <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %>
 <label for="inputBody">Opinion</label>
 <%= f.text_area :body, autofocus: true, id:"inputIntroduction", placeholder:"Opinion" %>

 <%= f.submit "Update Book" %>
<% end %>