
<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

  <h1>Editing Book</h1>

  <%= form_with model: @book do |f| %>

  <div class="form-group">
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class: "form-control book_title" %>
  </div>

  <div class="form-group">
  <label for="inputBody">Opinion</label>
  <%= f.text_area :body, autofocus: true, id:"inputIntroduction", placeholder:"Opinion", class:"form-control book_body" %>
  </div>

  <div class="form-group">
  <%= f.submit "Update Book", class: "btn btn-success" %>
  </div>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %> |
  <%= link_to "Back", :back %>

  </div>
 </div>
</div>