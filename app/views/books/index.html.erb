 <h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
 <% @books.each do |book| %>
 <tr>
 <td><%= link_to user_path(current_user.id) do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
 </td>

 <td><%= link_to book.title, book_path(book.id) %></td>
 <td><%= book.body %></td>
 <% end %>
 </tbody>
 </table>




