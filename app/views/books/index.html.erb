<%= render 'users/info', user: current_user %>
<%= render 'books/newbook', book: @book %>


 <h1>Books</h1>

 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
 <% @books.each do |book| %>
 <tr>
 <td><%= link_to user_path(current_user.id) do %>
  <%= image_tag book.user.get_profile_image(100,100) %>
  <% end %>
 </td>

 <td><%= link_to book.title, book_path(book.id) %></td>
 <td><%= book.body %></td>
 <% end %>
 </tbody>
 </table>


<h1>New book</h1>
<%= form_with model: @book do |f| %>

<div class="field">
<label for="book_title">Title</label>
 <%= f.text_field :title %>
</div>

<div class="field">
<ladel for="book_body">Opinion</ladel>
 <%= f.text_area :body %>
</div>

<div class="actions">
 <%= f.submit 'Create Book' %>
</div>
 <% end %>


